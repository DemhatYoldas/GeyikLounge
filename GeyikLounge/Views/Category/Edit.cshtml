
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GeyikLounge.Entities.Category

@using (Html.BeginForm("Edit", "Category", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <label for="Name">Category Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="MenuId">Menu</label>
        @Html.DropDownListFor(m => m.MenuId, (SelectList)ViewBag.MenuId, "Select a menu", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}