
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

@model GeyikLounge.Entities.Product

@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label for="Name">Product Name</label>
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        @Html.TextBoxFor(p => p.Price, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Image">Product Image</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Category">Category</label>
        @Html.DropDownList("CategoryId", null, "Select Category", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
}