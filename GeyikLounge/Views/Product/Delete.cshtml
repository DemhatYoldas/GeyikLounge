
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model GeyikLounge.Entities.Product

<h2>Are you sure you want to delete this product?</h2>
<div>
    <h3>@Model.Name</h3>
    <img src="@Model.ImagePath" alt="@Model.Name" style="max-width:200px;" />
</div>

@using (Html.BeginForm("Delete", "Product", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Cancel</a>
}